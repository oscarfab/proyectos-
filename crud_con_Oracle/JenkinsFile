pipeline {
    agent any

    environment {
        APP_NAME         = 'crud-oracle-app'
        DOCKER_IMAGE     = "${APP_NAME}:latest"
        PROJECT_PATH     = 'crud_con_Oracle'
        GIT_REPO         = 'https://github.com/oscarfab/proyectos-.git'
        GIT_BRANCH       = 'main'
    }

    tools {
        maven 'Maven'
        jdk 'Java'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Descargando c√≥digo desde GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/${GIT_BRANCH}"]],
                    userRemoteConfigs: [[url: "${GIT_REPO}"]]
                ])
            }
        }

        stage('Compilar y ejecutar pruebas unitarias') {
            steps {
                script {
                    dir("${PROJECT_PATH}") {
                        echo 'üß™ Ejecutando pruebas unitarias con H2...'
                        bat 'mvn clean verify'
                    }
                }
            }
            post {
                always {
                    echo 'üìä Publicando resultados de pruebas...'
                    junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java',
                        inclusionPattern: '**/*.class',
                        exclusionPattern: '**/test/**'
                    )
                }
            }
        }

        stage('Construir imagen Docker') {
            steps {
                script {
                    dir("${PROJECT_PATH}") {
                        echo 'üèóÔ∏è Construyendo nueva imagen Docker...'
                        bat "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }

        stage('Verificar infraestructura') {
            steps {
                script {
                    dir("${PROJECT_PATH}") {
                        echo 'üîç Verificando que Oracle est√© corriendo...'

                        // Verificar si Oracle est√° corriendo
                        def oracleRunning = bat(
                            script: 'docker ps --filter name=oracle-db --format "{{.Names}}"',
                            returnStdout: true
                        ).trim()

                        if (oracleRunning != 'oracle-db') {
                            echo '‚ö†Ô∏è Oracle no est√° corriendo. Iniciando infraestructura...'
                            bat 'docker-compose up -d oracle-db'
                            echo '‚è≥ Esperando 2 minutos a que Oracle est√© listo...'
                            sleep(time: 120, unit: 'SECONDS')
                        } else {
                            echo '‚úÖ Oracle ya est√° corriendo'
                        }
                    }
                }
            }
        }

        stage('Actualizar aplicaci√≥n') {
            steps {
                script {
                    dir("${PROJECT_PATH}") {
                        echo 'üîÑ Actualizando contenedor de la aplicaci√≥n...'

                        // Detener el contenedor actual (si existe)
                        bat 'docker-compose stop crud-app || exit 0'
                        bat 'docker-compose rm -f crud-app || exit 0'

                        // Levantar la nueva versi√≥n
                        bat 'docker-compose up -d crud-app'

                        echo '‚è≥ Esperando 30 segundos a que la app inicie...'
                        sleep(time: 30, unit: 'SECONDS')

                        echo 'üîç Logs de la aplicaci√≥n:'
                        bat 'docker logs crud-oracle-container --tail 50'
                    }
                }
            }
        }

        stage('Verificar despliegue') {
            steps {
                script {
                    dir("${PROJECT_PATH}") {
                        echo 'üåç Verificando despliegue...'
                        bat 'docker-compose ps'

                        // Verificar health endpoint
                        echo 'üíö Verificando health endpoint...'
                        bat 'curl -f http://localhost:8088/actuator/health || exit 0'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'üßπ Pipeline finalizado'
        }
        success {
            echo '‚úÖ =========================================='
            echo '‚úÖ DESPLIEGUE EXITOSO'
            echo '‚úÖ =========================================='
            echo ''
            echo 'üìä Swagger: http://localhost:8088/swagger-ui.html'
            echo 'üíö Health: http://localhost:8088/actuator/health'
            echo 'üì° API: http://localhost:8088/api/empleados'
            echo ''
            echo 'üóÉÔ∏è Oracle: localhost:1521 (system/oracle)'
            echo ''
            echo 'üìã Ver logs:'
            echo '   docker-compose logs -f crud-app'
            echo ''
            echo '‚ö†Ô∏è Para detener TODO:'
            echo '   docker-compose down'
        }
        failure {
            echo '‚ùå ERROR EN EL PIPELINE'
            echo 'üîç Ver logs con: docker-compose logs'
        }
    }
}